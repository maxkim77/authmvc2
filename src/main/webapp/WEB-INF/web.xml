<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <display-name>DCU STUDY</display-name>

    <!-- 세션 만료 시간 설정-->
    <session-config>
        <session-timeout>10</session-timeout>
    </session-config>

    <!-- 로그인 서블릿 -->
    <servlet>
        <servlet-name>UserLoginCon</servlet-name>
        <servlet-class>controller.UserLoginCon</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserLoginCon</servlet-name>
        <url-pattern>/login.do</url-pattern>
    </servlet-mapping>

    <!-- 프로필 서블릿 -->
    <servlet>
        <servlet-name>UserProfileCon</servlet-name>
        <servlet-class>controller.UserProfileCon</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserProfileCon</servlet-name>
        <url-pattern>/profile.do</url-pattern>
    </servlet-mapping>

    <!-- 로그아웃 서블릿 -->
    <servlet>
        <servlet-name>UserLogoutCon</servlet-name>
        <servlet-class>controller.UserLogoutCon</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserLogoutCon</servlet-name>
        <url-pattern>/logout.do</url-pattern>
    </servlet-mapping>
</web-app>
